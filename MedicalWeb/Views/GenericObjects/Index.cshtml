@model IEnumerable<MedicalBot.Entities.Platform.GenericObject>
@using MedicalBot.Entities.Platform
@using Newtonsoft.Json

@{
    var definition = ViewBag.Definition as AppDefinition;
    ViewData["Title"] = definition?.Name;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0">
            @if (!string.IsNullOrEmpty(definition?.Icon))
            {
                <i class="bi bi-@definition.Icon me-2"></i>
            }
            @definition?.Name
        </h2>
        <small class="text-muted">Реестр записей</small>
    </div>
    <a asp-controller="GenericObjects" 
       asp-action="Create" 
       asp-route-entityCode="@definition?.EntityCode" 
       class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Добавить запись
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 150px;">Дата</th>
                            <th>Название</th> @* Основное поле Name из GenericObject *@
                            @if (definition?.Fields != null)
                            {
                                foreach (var field in definition.Fields.OrderBy(f => f.SortOrder))
                                {
                                    <th>@field.Label</th>
                                }
                            }
                            <th style="width: 120px;" class="text-end">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            // Распарсим JSON один раз для всей строки
                            var dynamicValues = !string.IsNullOrEmpty(item.Properties) 
                                ? JsonConvert.DeserializeObject<Dictionary<string, string>>(item.Properties) 
                                : new Dictionary<string, string>();

                            <tr>
                                @* ФАКТ: Добавили .ToLocalTime(), чтобы время в таблице совпадало с твоим *@
                                <td class="small text-muted">@item.CreatedAt.ToLocalTime().ToString("g")</td>
                                <td><strong>@item.Name</strong></td>
                                @if (definition?.Fields != null)
                                {
                                    foreach (var field in definition.Fields.OrderBy(f => f.SortOrder))
                                    {
                                        <td>
                                            @if (dynamicValues != null && dynamicValues.ContainsKey(field.SystemName))
                                            {
                                                @dynamicValues[field.SystemName]
                                            }
                                            else
                                            {
                                                <span class="text-muted small">-</span>
                                            }
                                        </td>
                                    }
                                }
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-1">
                                        <a asp-controller="GenericObjects" 
                                           asp-action="Edit" 
                                           asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <form asp-controller="GenericObjects" 
                                              asp-action="Delete" 
                                              asp-route-id="@item.Id" 
                                              method="post" 
                                              onsubmit="return confirm('Удалить запись?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="py-5 text-center text-muted">
                <i class="bi bi-database-exclamation fs-1 mb-3 d-block text-warning"></i>
                <h5>Записей пока нет</h5>
            </div>
        }
    </div>
</div>