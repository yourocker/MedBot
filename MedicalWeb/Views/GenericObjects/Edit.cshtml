@model MedicalBot.Entities.Platform.GenericObject
@{ ViewData["Title"] = "Редактирование"; }

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="mb-4">Редактирование объекта</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EntityCode" />
            
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Основное наименование</label>
                        <input asp-for="Name" class="form-control form-control-lg" required />
                    </div>
                </div>
            </div>

            <partial name="_DynamicFields" />

            <div class="mt-4 border-top pt-3">
                <button type="submit" class="btn btn-primary px-5">Сохранить</button>
                <a asp-action="Index" asp-route-entityCode="@Model.EntityCode" class="btn btn-link">Отмена</a>
            </div>
        </form>
    </div>
</div>