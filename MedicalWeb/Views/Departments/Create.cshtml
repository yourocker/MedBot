@model MedicalBot.Entities.Company.Department
@{ ViewData["Title"] = "Новый отдел"; }

<form asp-action="Create" method="post">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Название</label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Родительский отдел</label>
                    <select asp-for="ParentId" class="form-select" asp-items="ViewBag.ParentId">
                        <option value="">-- Корень --</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Руководитель</label>
                    <select asp-for="ManagerId" class="form-select" asp-items="ViewBag.ManagerId">
                        <option value="">-- Не назначен --</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <partial name="_DynamicFields" model="null" />
    <button type="submit" class="btn btn-primary px-5">Создать</button>
</form>